char nextGreatestLetter(char* letters, int lettersSize, char target) {
    int low = 0, high = lettersSize - 1;
    int pos = -1;

    while (low <= high) {
        int mid = low + (high - low) / 2;
        if (letters[mid] > target) {
            pos = mid;
            high = mid - 1;
        } else {
            low = mid + 1;
        }
    }

    return (pos == -1) ? letters[0] : letters[pos];
}
